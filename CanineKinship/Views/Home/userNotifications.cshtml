@model IEnumerable<CanineKinship.Models.Notifications>

<style>


    .event {
        /*width: 90%;*/
        /*height: 200px;*/
        background-color: white;
        box-shadow: 0 0 20px 0px #949494;
        /*margin: 100px;*/
        font-family: arial;
        margin-bottom: 20px;
    }

    .cal {
        /*width: 200px;*/
        height: 200px;
        background-color: #834699;
        /*margin-right: 25px;*/
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .day, .month {
        width: 100%;
        text-align: center;
        color: white;
        padding-top: 10px
    }

    .day {
        /*font-size: 100px;*/
        font-size: 2em;
        font-weight: lighter;
    }

    .month {
        font-size: 2em;
        font-weight: bold;
    }

    .title, .details {
        padding: 15px;
        text-align: left;
    }

    .title {
        font-size: 3em;
    }
</style>


<h1 style="color: forestgreen; font-family: myFirstFont; font-size: 60px;">
    Events
</h1>

<hr />


@foreach (var item in Model)
{
    <div class="row event">
        <div class="cal col-xs-3">
            <div class="day">@Html.DisplayFor(modelItem => item.Day)</div>
            <div class="month">@Html.DisplayFor(modelItem => item.Month)</div>
        </div>
        <div class="eventDetails col-xs-9">
            <div class="title" style="color: purple">
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="details" style="">
                @Html.DisplayFor(modelItem => item.NotificationText)                
            </div>
        </div>
    </div>
    <hr />
}





